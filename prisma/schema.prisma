generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int     @id @default(autoincrement())
  name     String
  user     String
  email    String
  password String
  tasks    task[]
}

model task {
  id           Int           @id @default(autoincrement())
  title        String
  description  String
  emergency    Boolean
  periodical   Boolean
  date         DateTime
  interval     String
  hour         String
  multiple     Boolean
  dateCreator  DateTime
  idUser       Int
  user         user          @relation(fields: [idUser], references: [id])
  multipleTask multipleTask[]
  recordTask   recordTask[]
  taskCompletion taskCompletion[]
  
}

model multipleTask {
  id      Int  @id
  idTask  Int
  title   String
  verif   String
  task    task @relation(fields: [idTask], references: [id])
}

model recordTask {
  id      Int    @id @default(autoincrement())
  idTask  Int
  record  Bytes
  task    task   @relation(fields: [idTask], references: [id])
}

model taskCompletion {
  id         Int      @id @default(autoincrement()) 
  taskId     Int                                 
  task       task     @relation(fields: [taskId], references: [id]) 
  completion DateTime @default(now())   
}